{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./src",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1",
    "^@interceptors/(.*)$": "<rootDir>/../src/common/interceptors/$1",
    "^@guards/(.*)$": "<rootDir>/../src/common/guards/$1",
    "^@decorators/(.*)$": "<rootDir>/../src/common/guards/$1"
  }
}